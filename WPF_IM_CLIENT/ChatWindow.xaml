<base:WindowTemplate x:Class="WPF_IM_CLIENT.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:WPF_IM_CLIENT"
    Title="ChatWindow" Height="300" Width="300" CanResize="True" Loaded="WindowTemplate_Loaded" Style="{StaticResource AlphaImWindow}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <GridSplitter 
            ResizeDirection="Rows"
            Grid.Row="1" 
            Width="Auto"
            Height="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0"
            />
        <RichTextBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" />
        <RichTextBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="2" />
        <Button Style="{StaticResource common_button}" Grid.Row="3" Content="Odeslat" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
    </Grid>
</base:WindowTemplate>
